    +section({
        sectionBg: 'bg-white',
        sectionPadding: 'py-10',
        svgBorderAngled: false,
        svgBorderRounded: false,
        svgBorderWaves: false,
        svgBorderFill: ''
    })

        .container
            .row.justify-content-center
                .col-lg-6
                    .text-center
                        h1.text-red
                            b OUR OFFERINGS AT A GLANCE
                br
                br
            .row
                .col-lg-4.col-md-6.mb-5(data-aos='fade-up')
                    .text-center
                        h3.text-teal
                            b DOCHASE ADX
                    ul(style='list-style-image: url(assets/img/RedBall.gif);')
                        li Click-to-call
                        li Click-to-WhatsApp
                        li Click-to-USSD
                        li Targeted SMS &amp; USSD
                        li Interactive Voice Response
                        li Display (Rich Media)
                .col-lg-4.col-md-6.mb-5(data-aos='fade-up' data-aos-delay='100')
                    .text-center
                        h3
                            b
                                a.text-teal(href='https://flashmedia.ng/') FLASHMEDIA
                    ul(style='list-style-image: url(assets/img/RedBall.gif);')
                        li Community Management
                        li Influencer Engagement
                        li Paid Marketing &amp; Media Buying
                        li SEO &amp; SEM
                        li Email Newsletter
                        li Digital Experiential
                .col-lg-4.col-md-6.mb-5(data-aos='fade-up' data-aos-delay='150')
                    .text-center
                        h3
                            b
                                a.text-teal(href='https://www.flashimpress.com/') FLASHIMPRESS
                    ul(style='list-style-image: url(assets/img/RedBall.gif);')
                        li Editorial Content
                        li Creative Storytelling
                        li Graphics and Infographics
    
